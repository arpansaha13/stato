{
  "compilerOptions": {
    "strict": true,
    "allowJs": false,
    "target": "es2020",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "sourceMap": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "types": [
      "node",
      "vite/client",
    ],
    "lib": [
      "esnext",
      "dom",
    ]
  },
  "include": [
    "cli",
    "src",
    "context",
    "helpers",
    "types",
  ],
  "exclude": [
    "dist",
    "node_modules",
  ]
}