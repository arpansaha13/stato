{
  "compilerOptions": {
    "strict": true,
    "allowJs": false,
    "target": "es2020",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "sourceMap": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "types": [
      "node",
      "vite/client"
    ],
    "lib": [
      "esnext",
      "dom"
    ]
  },
  "include": [
    "cli/**/*.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "context/**/*.ts",
    "context/**/*.tsx",
    "context/**/*.vue",
    "helpers/*.ts",
    "helpers/*.d.ts",
    "types/*.ts"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}